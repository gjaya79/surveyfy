<% include ../partials/header %>

    <h1>Survey Report</h1>

    <div class="row text-left" style="display:flex; flex-wrap: wrap;">
    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }
        th, td {
            padding: 5px;
        }
        th {
            text-align: left;
        }
    </style>
        <% if(surveys.length > 0){ %>
           <% surveys.forEach(function(survey) { %>
                <div class="card card-body bg-light">
                    <div class="thumbnail">
                        <div class="caption">
                            <h3><%= survey.name %></h3>
                            <h4><%= survey.description %></h4>
                            <table>
                            <tr>
                                <th>Viewed</th>
                                <td></td>
                            </tr>
                            <tr>
                                <th>Most Viewed</th>
                                <td></td>
                            </tr>
                            <tr>
                                <th>Last Modfied</th>
                                <td><%= survey.createdAt %></td>
                            </tr>
                            </table>
                            <p>
                                <a class="btn btn-outline-secondary">More Detail</a>
                            </p>
                        </div>
                    </div>
                </div>
            <% }) %>
            
         <% } else { %> 
             <div class="container">
                 <h3 class="text-center">No Surveys Now...</h1>
             </div>
           
        <% } %>
        
    </div>
</div>

 <a class="btn btn-secondary float-left" href="/surveys">Go Back</a>
 
<% include ../partials/footer %>